<div id="sidebar">
  <% if (currentNation) { %>
    <strong><a href="" class="nation-link"><%= currentNation.get('name') %></a></strong><br>
    <strong><a href="#/issues">Issues</a><br></strong>
    <a href="#/nations/edit">Settings</a><br>
    <a href="" class="logout">Log Out</a>
  <% } else { %>
    <strong><a href="">Home</a></strong><br>
    <a href="/nations/new" target="new">
      <input type="submit" value="New Nation">
    </a>
  <% } %>
</div>

<div id="nations">
  <h2>The World</h2>
  <table class="nations-table">
    <% if (nations) { %>
      <tr class="table-head">
        <td>
          Nation
        </td>
        <td>
          Government Type
        </td>
        <td>
          Motto
        </td>
      </tr>
      <% nations.each(function (nation) { %>
        <tr class="nation-row">
          <td>
            <a href="/#nations/<%= nation.id %>">
              <%= nation.get('name') %>
            </a>
          </td>
          <td>
            <%= nation.get('gov_type') %>
          </td>
          <td>
            <%= nation.get('motto') %>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </table>
</div>
